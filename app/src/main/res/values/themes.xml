<resources>
    <!-- Base application theme. -->
    <style name="Theme.SolarViewer.Base" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>

        <item name="android:statusBarColor">?colorSurface</item>
    </style>

    <style name="Theme.SolarViewer" parent="Theme.SolarViewer.Base" />

    <style name="ActionBarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/g_sans_medium</item>
        <item name="fontFamily">@font/g_sans_medium</item>
        <item name="android:textColor">@color/white_80</item>
    </style>

    <style name="Home.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceActive">@style/Home.BottomNavigation.TextAppearance.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/Home.BottomNavigation.TextAppearance.Inactive
        </item>
        <item name="itemTextColor">@color/bottom_nav_title_color</item>
        <item name="itemIconTint">@color/bottom_nav_title_color</item>
        <item name="itemRippleColor">@color/secondaryColor</item>
    </style>

    <style name="Home.BottomNavigation.TextAppearance.Active" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/g_sans</item>
        <item name="fontFamily">@font/g_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Home.BottomNavigation.TextAppearance.Inactive" parent="Home.BottomNavigation.TextAppearance.Active">
        <item name="android:textSize">12sp</item>
    </style>

</resources>