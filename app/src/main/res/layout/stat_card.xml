<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="200dp"
    tools:layout_width="200dp"
    tools:parentTag="com.google.android.material.card.MaterialCardView">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stat_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="@font/g_sans"
            android:textColor="@color/white_80"
            android:textSize="@dimen/stat_card_title"
            tools:drawableEnd="@drawable/ic_wb_sunny_24"
            tools:text="Solar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stat_card_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="@font/g_sans_medium"
            android:textColor="@color/white_80"
            android:textSize="@dimen/stat_card_energy"
            tools:text="10kWh" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stat_card_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/g_sans"
            android:textColor="@color/white_80"
            android:textSize="@dimen/stat_card_footer"
            tools:text="@string/home_stat_produced" />
    </FrameLayout>
</merge>